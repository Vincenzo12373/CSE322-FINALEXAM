#include <stdio.h>

int main() {
    int decimal, binary = 0, remainder, i;

    printf("Enter a decimal number: ");
    scanf("%d", &decimal);

    if (decimal == 0) {
        printf("Binary equivalent: 0\n");
        return 0;
    }

    // Handle negative numbers (replace with absolute values if needed)
    decimal = decimal < 0 ? -decimal : decimal;

    for (i = 0; decimal != 0; i++) {
        remainder = decimal % 2;
        binary = binary * 10 + remainder;
        decimal /= 2;
    }

    printf("Binary equivalent: ");

    // Print binary digits in reverse order
    for (i = i - 1; i >= 0; i--) {
        printf("%d", binary % 10);
        binary /= 10;
    }

    printf("\n");

    return 0;
}
