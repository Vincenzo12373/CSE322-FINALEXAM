#include <stdio.h>

int main() {
    float principal, interestRate, timeInYears;

    printf("Enter the principal amount: ");
    scanf("%f", &principal);

    printf("Enter the annual interest rate: ");
    scanf("%f", &interestRate);

    printf("Enter the investment period in year: ");
    scanf("%f", &timeInYears);

    interestRate /= 100.0;

    float simpleInterest = principal * interestRate * timeInYears;

    printf("Principal amount: %.2f\n", principal);
    printf("Annual interest rate: %.2f%%\n", interestRate * 100);
    printf("Investment period: %.2f years\n", timeInYears);
    printf("Simple interest: %.2f\n", simpleInterest);

    return 0;
}
