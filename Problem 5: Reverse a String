#include <stdio.h>
#include <string.h>  // For strlen

void reverseStringLoop(char str[]) {
    int len = strlen(str);
    int start = 0, end = len - 2;  // Exclude null terminator

    while (start < end) {
        char temp = str[start];
        str[start] = str[end];
        str[end] = temp;
        start++;
        end--;
    }
}

int main() {
    char str[100];

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);  // Use fgets for safer input
    str[strcspn(str, "\n")] = '\0';  // Remove trailing newline from fgets

    printf("Original string: %s\n", str);

    reverseStringLoop(str);

    printf("Reversed string: %s\n", str);

    return 0;
}
